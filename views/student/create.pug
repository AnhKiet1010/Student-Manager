extends ../layout/common.pug

block content
  h1 Create Student

  if errors
    each error in errors
      .alert.alert-danger= error

  form(action="/student/create", method="POST" , enctype="multipart/form-data")
    .form-group
    label(for="name") Name
    input#name.form-control(name="name", type="text", value=values ? values.name : "")

    .form-group
    label(for="age") Age
    input#age.form-control(name="age", type="number", value=values ? values.age : "")

    .form-group
    label(for="country") Country
    input#country.form-control(name="country", type="text", value=values ? values.country : "")

    .form-group
    label(for="email") Email
    input#email.form-control(name="email", type="text", value=values ? values.email : "")

    .form-group
    label(for="avatar") Avatar
    input#avatar.form-control-file(name="avatar", type="file")
    br
    button.btn.btn-primary Create