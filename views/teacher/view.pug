extends ../layout/common.pug

block content
    p.text-center
        img(src= teacher.avatar, alt="avatar")
    table.table
        tr
            th(colspan=2).text-center 先生の情報
        tr
            td Name
            td #{teacher.name}
        tr
            td 名前
            td #{teacher.namej}
        tr
            td 年齢
            td #{teacher.age}
        tr
            td コース
            td #{teacher.couse}
        tr
            td Eメール
            td= teacher.email