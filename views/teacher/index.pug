extends ../layout/common.pug

block content
	.row
		.col-auto.mr-auto
			h1 Teachers List
		.col-auto
			button.btn.btn-outline-success.my-2.my-sm-0
				a(href="/teacher/create") Create
	br
	.row
		each teacher in teachers
			.col-sm-6.col-md-4.col-lg-3
				.card(style="width: 14em;").mb-3
					if (teacher.avatar !== "")
						img.card-img-top(src= teacher.avatar height="240px")
					else
						img.card-img-top(src="./images/avatar.png" height="240px")
					.card-body
						h6.card-title 名前 : #{teacher.name}
						p.card-text コース : #{teacher.couse}
						p.card-text Age : #{teacher.age}歳
						a.btn.btn-primary(href='/teacher/detail/' + teacher.id) See more
